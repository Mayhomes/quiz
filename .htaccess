# Cache Control for Vinhomes Quiz App
# This file works with Apache servers

# Disable caching for HTML files (always get fresh version)
<FilesMatch "\.(html)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires 0
</FilesMatch>

# Short cache for JavaScript and CSS (1 hour)
<FilesMatch "\.(js|css)$">
    Header set Cache-Control "max-age=3600, must-revalidate"
</FilesMatch>

# Long cache for images and static assets (1 week)
<FilesMatch "\.(jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot)$">
    Header set Cache-Control "max-age=604800, public"
</FilesMatch>

# Enable ETags for better cache validation
FileETag MTime Size
